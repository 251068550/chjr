page{
  background-color:#EFEFEF;
}
.tip{
  font-size: 14rpx;
  color: #E54F5B;
  margin-left: 20rpx;
}
#panel{
  background:#fff;
  margin-top: 10rpx;
}

#panel text{
  font-size:24rpx;
  line-height: 50rpx;
  padding:10rpx 0;
  border-bottom: 1rpx solid #ddd;
}

.flex-row{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.flex-column{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: stretch;
}

.flex-cell{
  flex: 1;
}